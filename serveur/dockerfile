FROM python:3.11-slim

# Métadonnées
LABEL maintainer="ZaidaneAfaf"
LABEL description="Iris ML API Server"

# Variables d'environnement
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Crée le dossier de travail
WORKDIR /app

# Copie requirements.txt en premier pour optimiser le cache Docker
COPY requirements.txt .

# Installe les dépendances
RUN pip install --no-cache-dir -r requirements.txt

# Crée le dossier models
RUN mkdir -p models

# Copie le code de l'application
COPY . .

# Expose le port
EXPOSE 8000

# Commande de santé pour vérifier que l'API fonctionne
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Commande par défaut
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]