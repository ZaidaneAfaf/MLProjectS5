FROM python:3.11-slim

WORKDIR /app

# Copie le code et les modèles
COPY serveur ./serveur
COPY models  ./models

# Dépendances
RUN pip install --no-cache-dir \
      fastapi uvicorn[standard] scikit-learn pandas numpy pydantic joblib \
 && apt-get update && apt-get install -y --no-install-recommends curl \
 && rm -rf /var/lib/apt/lists/*

ENV PYTHONUNBUFFERED=1

EXPOSE 80

# Healthcheck (assure-toi d’avoir /health dans FastAPI)
HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD curl -fs http://localhost:80/health || exit 1

CMD ["uvicorn", "serveur.app:app", "--host", "0.0.0.0", "--port", "80"]
